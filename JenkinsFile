pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                echo 'Building Project'
            }
        }
        stage('Test') {
            when{
                expression{
                    params.executeTest
                }
            }
            steps {
                echo 'Testing build'
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploy version ${params.VERSION}"
            }
        }
    }
}
